{{>header}}
<h1 class="d-flex justify-content-center">Obra: <span class="text-primary">Roggio</span></h1>
<div class="container-md">
  <h3 class="text-secondary">Editar Colaborador</h3>
</div>

<div class="col-md-4 mx-auto ">
  <div class="card card-body p-4">
    <form action="/colaboradores/{{colaborador.id}}" method="POST">
      <input class="form-control text-center" type="text" name="nombre" value="{{colaborador.nombre}}">
      <input class="form-control text-center" type="text" name="cargo" value="{{colaborador.cargo}}">
      <input class="form-control" type="hidden" name="_method" value="PUT">
      <div class="d-flex justify-content-center">
      <button class="btn btn-info btn-block m-1 text-light" type="submit">Guardar</button>
      </div>
    </form>
  </div>
</div>
{{> footer }}