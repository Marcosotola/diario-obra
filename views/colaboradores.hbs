<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Colaboradores</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <!-- Vista de los colaboradores -->
<h1>Colaboradores</h1>

{{#each colaboradores}}
<div>
    <h3>{{nombre}}</h3>
    <p>{{cargo}}</p>

    <!-- BotÃ³n para editar colaborador -->
    <button class="btn btn-success btn-block m-1">
        <a href="/colaboradores/{{this.id}}/edit">Editar</a>
    </button>
    <!-- Formulario para eliminar colaborador -->
    <form action="/colaboradores/{{this.id}}?_method=DELETE" method="POST">
        <button type="submit">Eliminar</button>
    </form>
</div>
{{/each}}

<!-- Formulario para agregar un nuevo colaborador -->
<form action="/colaboradores" method="POST">
    <input type="text" name="nombre" placeholder="Nombre">
    <input type="text" name="cargo" placeholder="Cargo">
    <button type="submit">Agregar</button>
</form>



</body>
</html>



