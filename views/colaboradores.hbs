<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Colaboradores</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
    {{> header }}


    <h1 class="d-flex justify-content-center">Obra: <span class="text-primary">Roggio</span></h1>
    <div class="container-md">
        <h3 class="text-secondary p-3">Colaboradores</h3>
    </div>


    {{#each colaboradores}}

    <div class='col-md-4 mx-auto'>
        <div class="card mb-1 text-center">
            <div class="card-body">
                <div class='d-flex flex-column justify-content-center'>
                    <div>
                        <h4><span class="text-secondary">Nombre: </span>{{nombre}}</h4>
                    </div>
                    <div>
                        <h5><span class="text-secondary">Cargo: </span>{{cargo}}</h5>
                    </div>
                </div>
                <div class="d-flex justify-content-evenly ">
                    <button class="btn btn-info btn-block m-1">
                        <a class="text-light text-decoration-none" href="/colaboradores/{{this.id}}/edit">Edit</a>
                    </button>
                    <form action="/colaboradores/{{this.id}}?_method=DELETE" method="POST">
                        <button class="btn btn-danger text-light btn-block m-1" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



    {{/each}}

    <!-- Formulario para agregar un nuevo colaborador -->
    <div class="container-md">
        <h3 class="text-secondary p-3">Insertar Nuevo Colaborador</h3>
    </div>
    <div class="d-flex justify-content-center">
        <form class="d-flex" action="/colaboradores" method="POST">
            <input class="form-control text-secondary m-1" type="text" name="nombre" placeholder="Nombre">
            <input class="form-control text-secondary m-1" type="text" name="cargo" placeholder="Cargo">
            <button class="btn btn-success btn-block m-1" type="submit">Agregar</button>
        </form>
    </div>
   






    {{> footer }}

</body>

</html>